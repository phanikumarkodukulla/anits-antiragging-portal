<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ANITS | Anti-Ragging Portal</title>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- FontAwesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- include('partials/navbar', { currentPage: 'home' }) %>

    <!-- Page Header -->
    <header class="page-header">
      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-lg-10 text-center">
            <img
              src="/images/anits.jpeg"
              alt="ANITS Logo"
              class="img-fluid rounded-3 shadow-lg mb-4"
              style="max-width: 150px"
            />
            <h1 class="fw-bold mb-3">
              <i class="fas fa-university me-3"></i>Anil Neerukonda Institute of
              Technology & Sciences
            </h1>
            <p class="lead mb-0">
              Anti-Ragging Cell - Building a Safe and Respectful Campus
            </p>
            <p class="mt-2" style="color: rgba(255, 255, 255, 0.9)">
              Your Safety is Our Priority
            </p>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container section-padding">
      <!-- Portal Cards Section -->
      <section class="row g-4 mb-5">
        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-body text-center p-5">
              <div class="mb-4">
                <i
                  class="fas fa-user-shield"
                  style="font-size: 4rem; color: var(--primary-blue)"
                ></i>
              </div>
              <h3 class="fw-bold mb-3">Admin Portal</h3>
              <p class="text-muted mb-4">
                Secure access for administrators to manage complaints, view
                analytics, and take necessary actions to ensure campus safety.
              </p>
              <a href="/admin/login" class="btn btn-primary btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>Enter Admin Portal
              </a>
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="card h-100">
            <div class="card-body text-center p-5">
              <div class="mb-4">
                <i
                  class="fas fa-user-graduate"
                  style="font-size: 4rem; color: var(--primary-blue)"
                ></i>
              </div>
              <h3 class="fw-bold mb-3">Student Portal</h3>
              <p class="text-muted mb-4">
                Report ragging incidents safely and confidentially. Your
                identity will be protected and action will be taken promptly.
              </p>
              <a href="/complaint/submit" class="btn btn-primary btn-lg">
                <i class="fas fa-file-alt me-2"></i>Submit Complaint
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Track Complaint Section -->
      <section class="row mb-5">
        <div class="col-lg-8 mx-auto">
          <div class="card">
            <div class="card-body text-center p-5">
              <i
                class="fas fa-search mb-3"
                style="font-size: 3rem; color: var(--primary-blue)"
              ></i>
              <h4 class="fw-bold mb-3">Track Your Complaint</h4>
              <p class="text-muted mb-4">
                Enter your Complaint ID to check the current status and track
                progress
              </p>
              <a href="/complaint/track" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-search me-2"></i>Track Complaint Status
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="row g-4 mb-5">
        <div class="col-md-4">
          <div class="card h-100 text-center">
            <div class="card-body p-4">
              <i
                class="fas fa-user-secret mb-3"
                style="font-size: 3rem; color: var(--primary-blue)"
              ></i>
              <h5 class="fw-bold mb-3">Complete Anonymity</h5>
              <p class="text-muted">
                Your identity will be protected. Submit complaints without fear
                of exposure.
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card h-100 text-center">
            <div class="card-body p-4">
              <i
                class="fas fa-bolt mb-3"
                style="font-size: 3rem; color: var(--success)"
              ></i>
              <h5 class="fw-bold mb-3">Quick Response</h5>
              <p class="text-muted">
                All complaints are reviewed within 24 hours and action is taken
                promptly.
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card h-100 text-center">
            <div class="card-body p-4">
              <i
                class="fas fa-gavel mb-3"
                style="font-size: 3rem; color: var(--danger)"
              ></i>
              <h5 class="fw-bold mb-3">Strict Action</h5>
              <p class="text-muted">
                Zero tolerance policy. Strict disciplinary action against
                offenders.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Statistics Section -->
      <section class="row g-4 mb-5">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h4 class="mb-0">
                <i class="fas fa-chart-line me-2"></i>Quick Stats
              </h4>
            </div>
            <div class="card-body">
              <div class="row text-center g-4">
                <div class="col-md-3">
                  <div class="p-3">
                    <i
                      class="fas fa-file-alt mb-2"
                      style="font-size: 2rem; color: var(--primary-blue)"
                    ></i>
                    <h3 class="fw-bold mb-1" style="color: var(--primary-blue)">
                      24/7
                    </h3>
                    <p class="text-muted mb-0">Available</p>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="p-3">
                    <i
                      class="fas fa-shield-alt mb-2"
                      style="font-size: 2rem; color: var(--success)"
                    ></i>
                    <h3 class="fw-bold mb-1" style="color: var(--success)">
                      100%
                    </h3>
                    <p class="text-muted mb-0">Confidential</p>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="p-3">
                    <i
                      class="fas fa-clock mb-2"
                      style="font-size: 2rem; color: var(--warning)"
                    ></i>
                    <h3 class="fw-bold mb-1" style="color: var(--warning)">
                      &lt;24hrs
                    </h3>
                    <p class="text-muted mb-0">Response Time</p>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="p-3">
                    <i
                      class="fas fa-users mb-2"
                      style="font-size: 2rem; color: var(--info)"
                    ></i>
                    <h3 class="fw-bold mb-1" style="color: var(--info)">
                      Active
                    </h3>
                    <p class="text-muted mb-0">Committee</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Emergency Helpline -->
      <section class="row">
        <div class="col-lg-8 mx-auto">
          <div
            class="card"
            style="background-color: #fff3cd; border-color: var(--warning)"
          >
            <div class="card-body text-center p-4">
              <i
                class="fas fa-phone-alt mb-3"
                style="font-size: 2.5rem; color: var(--warning)"
              ></i>
              <h4 class="fw-bold mb-3">24/7 Emergency Helpline</h4>
              <p class="mb-3">
                Need immediate help? Contact our emergency helpline
              </p>
              <h3 class="fw-bold mb-2" style="color: var(--primary-blue)">
                <i class="fas fa-phone me-2"></i>1800-180-5522
              </h3>
              <p class="text-muted small mb-0">
                UGC Anti-Ragging Helpline (Toll-Free)
              </p>
            </div>
          </div>
        </div>
      </section>
    </main>

    <%- include('partials/footer') %>

    <!-- SOS Button (Floating) -->
    <button id="sosButton" class="sos-button" title="Emergency SOS Alert">
      <i class="fas fa-exclamation-triangle"></i>
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/sos.js"></script>
  </body>
</html>
