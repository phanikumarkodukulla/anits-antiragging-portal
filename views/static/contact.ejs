<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      .hero-section {
        background: linear-gradient(
          135deg,
          var(--primary-blue) 0%,
          #1e4d7b 100%
        );
        padding: 4rem 0;
        color: white;
      }
      .icon-box {
        width: 70px;
        height: 70px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 1rem;
      }
      .contact-card {
        border-radius: 15px;
        transition: all 0.3s ease;
        border-top: 4px solid;
      }
      .contact-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
      }
      .phone-number {
        font-size: 1.8rem;
        font-weight: bold;
        margin: 1rem 0;
      }
    </style>
  </head>
  <body class="student-page">
    <%- include('../partials/navbar', { currentPage: 'contact' }) %>

    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-8 mx-auto text-center">
            <div class="mb-4">
              <i class="fas fa-phone-alt fa-4x" style="opacity: 0.9"></i>
            </div>
            <h1 class="display-4 fw-bold mb-3">Emergency Contact Numbers</h1>
            <p class="lead mb-0">Help is Just a Call Away</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <div class="container my-5">
      <!-- Emergency Alert -->
      <div class="row mb-5">
        <div class="col-lg-10 mx-auto">
          <div
            class="alert border-0 shadow-sm d-flex align-items-center"
            style="
              border-radius: 15px;
              background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
            "
          >
            <div class="icon-box me-4" style="background: white">
              <i class="fas fa-exclamation-triangle text-danger"></i>
            </div>
            <div>
              <h5 class="alert-heading fw-bold mb-2 text-danger">
                In Case of Emergency
              </h5>
              <p class="mb-0 text-dark">
                If you are in immediate danger or witnessing a ragging incident,
                contact any of the numbers below immediately. All helplines are
                available 24/7.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Emergency Contact Numbers -->
      <div class="row mb-5">
        <div class="col-lg-10 mx-auto">
          <h3 class="fw-bold mb-4 text-center">
            <i
              class="fas fa-phone-volume me-2"
              style="color: var(--primary-blue)"
            ></i
            >Emergency Helplines
          </h3>

          <div class="row g-4">
            <!-- Campus Security -->
            <div class="col-md-6">
              <div
                class="card contact-card border-0 shadow-sm h-100"
                style="border-top-color: var(--primary-blue) !important"
              >
                <div class="card-body text-center p-4">
                  <div
                    class="icon-box mx-auto"
                    style="
                      background: linear-gradient(
                        135deg,
                        #e3f2fd 0%,
                        #bbdefb 100%
                      );
                    "
                  >
                    <i
                      class="fas fa-shield-alt"
                      style="color: var(--primary-blue)"
                    ></i>
                  </div>
                  <h5 class="fw-bold">Campus Security</h5>
                  <div class="phone-number" style="color: var(--primary-blue)">
                    +91-1234-567890
                  </div>
                  <p class="text-muted mb-3">
                    <i class="fas fa-clock me-2"></i>24/7 Available
                  </p>
                  <a
                    href="tel:+911234567890"
                    class="btn shadow"
                    style="
                      background: linear-gradient(
                        135deg,
                        var(--primary-blue) 0%,
                        #1e4d7b 100%
                      );
                      border: none;
                      color: white;
                      border-radius: 10px;
                      padding: 0.6rem 2rem;
                    "
                  >
                    <i class="fas fa-phone-alt me-2"></i>Call Now
                  </a>
                </div>
              </div>
            </div>

            <!-- National Anti-Ragging Helpline -->
            <div class="col-md-6">
              <div
                class="card contact-card border-0 shadow-sm h-100"
                style="border-top-color: #28a745 !important"
              >
                <div class="card-body text-center p-4">
                  <div
                    class="icon-box mx-auto"
                    style="
                      background: linear-gradient(
                        135deg,
                        #d4edda 0%,
                        #c3e6cb 100%
                      );
                    "
                  >
                    <i class="fas fa-headset text-success"></i>
                  </div>
                  <h5 class="fw-bold">National Anti-Ragging Helpline</h5>
                  <div class="phone-number text-success">1800-180-5522</div>
                  <p class="text-muted mb-3">
                    <i class="fas fa-globe me-2"></i>UGC 24x7 Toll Free
                  </p>
                  <a
                    href="tel:18001805522"
                    class="btn btn-success shadow"
                    style="border-radius: 10px; padding: 0.6rem 2rem"
                  >
                    <i class="fas fa-phone-alt me-2"></i>Call Now
                  </a>
                </div>
              </div>
            </div>

            <!-- Dean Student Welfare -->
            <div class="col-md-6">
              <div
                class="card contact-card border-0 shadow-sm h-100"
                style="border-top-color: #17a2b8 !important"
              >
                <div class="card-body text-center p-4">
                  <div
                    class="icon-box mx-auto"
                    style="
                      background: linear-gradient(
                        135deg,
                        #d1ecf1 0%,
                        #bee5eb 100%
                      );
                    "
                  >
                    <i class="fas fa-user-tie text-info"></i>
                  </div>
                  <h5 class="fw-bold">Dean Student Welfare</h5>
                  <div class="phone-number text-info">+91-9876-543210</div>
                  <p class="text-muted mb-3">
                    <i class="fas fa-business-time me-2"></i>Mon - Fri, 9 AM - 5
                    PM
                  </p>
                  <a
                    href="tel:+919876543210"
                    class="btn btn-info shadow"
                    style="border-radius: 10px; padding: 0.6rem 2rem"
                  >
                    <i class="fas fa-phone-alt me-2"></i>Call Now
                  </a>
                </div>
              </div>
            </div>

            <!-- Chief Warden -->
            <div class="col-md-6">
              <div
                class="card contact-card border-0 shadow-sm h-100"
                style="border-top-color: #ffc107 !important"
              >
                <div class="card-body text-center p-4">
                  <div
                    class="icon-box mx-auto"
                    style="
                      background: linear-gradient(
                        135deg,
                        #fff3cd 0%,
                        #ffeaa7 100%
                      );
                    "
                  >
                    <i class="fas fa-building text-warning"></i>
                  </div>
                  <h5 class="fw-bold">Chief Warden</h5>
                  <div class="phone-number text-warning">+91-8765-432109</div>
                  <p class="text-muted mb-3">
                    <i class="fas fa-clock me-2"></i>24/7 Available
                  </p>
                  <a
                    href="tel:+918765432109"
                    class="btn btn-warning shadow"
                    style="border-radius: 10px; padding: 0.6rem 2rem"
                  >
                    <i class="fas fa-phone-alt me-2"></i>Call Now
                  </a>
                </div>
              </div>
            </div>

            <!-- Police -->
            <div class="col-md-6">
              <div
                class="card contact-card border-0 shadow-sm h-100"
                style="border-top-color: #dc3545 !important"
              >
                <div class="card-body text-center p-4">
                  <div
                    class="icon-box mx-auto"
                    style="
                      background: linear-gradient(
                        135deg,
                        #f8d7da 0%,
                        #f5c6cb 100%
                      );
                    "
                  >
                    <i class="fas fa-car-side text-danger"></i>
                  </div>
                  <h5 class="fw-bold">Local Police Station</h5>
                  <div class="phone-number text-danger">100 / 112</div>
                  <p class="text-muted mb-3">
                    <i class="fas fa-ambulance me-2"></i>Emergency Services
                  </p>
                  <a
                    href="tel:100"
                    class="btn btn-danger shadow"
                    style="border-radius: 10px; padding: 0.6rem 2rem"
                  >
                    <i class="fas fa-phone-alt me-2"></i>Call Now
                  </a>
                </div>
              </div>
            </div>

            <!-- Women's Helpline -->
            <div class="col-md-6">
              <div
                class="card contact-card border-0 shadow-sm h-100"
                style="border-top-color: #e83e8c !important"
              >
                <div class="card-body text-center p-4">
                  <div
                    class="icon-box mx-auto"
                    style="
                      background: linear-gradient(
                        135deg,
                        #f8d7da 0%,
                        #f5c6cb 100%
                      );
                    "
                  >
                    <i class="fas fa-female" style="color: #e83e8c"></i>
                  </div>
                  <h5 class="fw-bold">Women's Helpline</h5>
                  <div class="phone-number" style="color: #e83e8c">1091</div>
                  <p class="text-muted mb-3">
                    <i class="fas fa-clock me-2"></i>24/7 Available
                  </p>
                  <a
                    href="tel:1091"
                    class="btn shadow"
                    style="
                      background: #e83e8c;
                      border: none;
                      color: white;
                      border-radius: 10px;
                      padding: 0.6rem 2rem;
                    "
                  >
                    <i class="fas fa-phone-alt me-2"></i>Call Now
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Email Contacts -->
      <div class="row mb-5">
        <div class="col-lg-10 mx-auto">
          <div
            class="card border-0 shadow-lg"
            style="border-radius: 20px; overflow: hidden"
          >
            <div
              style="
                background: linear-gradient(
                  135deg,
                  var(--primary-blue) 0%,
                  #1e4d7b 100%
                );
                padding: 2rem;
              "
            >
              <h3 class="text-white fw-bold mb-0">
                <i class="fas fa-envelope me-2"></i>Email Contacts
              </h3>
            </div>
            <div class="card-body p-4">
              <div class="row g-4">
                <div class="col-md-6">
                  <div
                    class="card border-0 shadow-sm h-100"
                    style="
                      border-radius: 12px;
                      border-left: 4px solid var(--primary-blue);
                    "
                  >
                    <div class="card-body p-4">
                      <div class="d-flex align-items-center mb-3">
                        <div
                          class="icon-box me-3"
                          style="
                            background: linear-gradient(
                              135deg,
                              #e3f2fd 0%,
                              #bbdefb 100%
                            );
                            width: 50px;
                            height: 50px;
                            font-size: 1.3rem;
                          "
                        >
                          <i
                            class="fas fa-users"
                            style="color: var(--primary-blue)"
                          ></i>
                        </div>
                        <h6 class="fw-bold mb-0">Anti-Ragging Committee</h6>
                      </div>
                      <p class="mb-0">
                        <i
                          class="fas fa-envelope me-2"
                          style="color: var(--primary-blue)"
                        ></i>
                        <a
                          href="mailto:antiragging@college.edu"
                          class="text-decoration-none"
                          >antiragging@college.edu</a
                        >
                      </p>
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div
                    class="card border-0 shadow-sm h-100"
                    style="
                      border-radius: 12px;
                      border-left: 4px solid var(--primary-blue);
                    "
                  >
                    <div class="card-body p-4">
                      <div class="d-flex align-items-center mb-3">
                        <div
                          class="icon-box me-3"
                          style="
                            background: linear-gradient(
                              135deg,
                              #e3f2fd 0%,
                              #bbdefb 100%
                            );
                            width: 50px;
                            height: 50px;
                            font-size: 1.3rem;
                          "
                        >
                          <i
                            class="fas fa-user-tie"
                            style="color: var(--primary-blue)"
                          ></i>
                        </div>
                        <h6 class="fw-bold mb-0">Dean Student Welfare</h6>
                      </div>
                      <p class="mb-0">
                        <i
                          class="fas fa-envelope me-2"
                          style="color: var(--primary-blue)"
                        ></i>
                        <a
                          href="mailto:dean@college.edu"
                          class="text-decoration-none"
                          >dean@college.edu</a
                        >
                      </p>
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div
                    class="card border-0 shadow-sm h-100"
                    style="
                      border-radius: 12px;
                      border-left: 4px solid var(--primary-blue);
                    "
                  >
                    <div class="card-body p-4">
                      <div class="d-flex align-items-center mb-3">
                        <div
                          class="icon-box me-3"
                          style="
                            background: linear-gradient(
                              135deg,
                              #e3f2fd 0%,
                              #bbdefb 100%
                            );
                            width: 50px;
                            height: 50px;
                            font-size: 1.3rem;
                          "
                        >
                          <i
                            class="fas fa-building"
                            style="color: var(--primary-blue)"
                          ></i>
                        </div>
                        <h6 class="fw-bold mb-0">Chief Warden</h6>
                      </div>
                      <p class="mb-0">
                        <i
                          class="fas fa-envelope me-2"
                          style="color: var(--primary-blue)"
                        ></i>
                        <a
                          href="mailto:warden@college.edu"
                          class="text-decoration-none"
                          >warden@college.edu</a
                        >
                      </p>
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div
                    class="card border-0 shadow-sm h-100"
                    style="
                      border-radius: 12px;
                      border-left: 4px solid var(--primary-blue);
                    "
                  >
                    <div class="card-body p-4">
                      <div class="d-flex align-items-center mb-3">
                        <div
                          class="icon-box me-3"
                          style="
                            background: linear-gradient(
                              135deg,
                              #e3f2fd 0%,
                              #bbdefb 100%
                            );
                            width: 50px;
                            height: 50px;
                            font-size: 1.3rem;
                          "
                        >
                          <i
                            class="fas fa-brain"
                            style="color: var(--primary-blue)"
                          ></i>
                        </div>
                        <h6 class="fw-bold mb-0">Counselling Center</h6>
                      </div>
                      <p class="mb-0">
                        <i
                          class="fas fa-envelope me-2"
                          style="color: var(--primary-blue)"
                        ></i>
                        <a
                          href="mailto:counselling@college.edu"
                          class="text-decoration-none"
                          >counselling@college.edu</a
                        >
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Alternative Reporting Methods -->
      <div class="row mb-5">
        <div class="col-lg-10 mx-auto">
          <h3
            class="fw-bold mb-4 text-center"
            style="color: var(--primary-blue)"
          >
            <i class="fas fa-share-alt me-2"></i>Alternative Reporting Methods
          </h3>

          <div class="row g-4">
            <div class="col-md-6">
              <div
                class="card border-0 shadow-sm h-100"
                style="border-radius: 15px"
              >
                <div class="card-body p-4 text-center">
                  <div
                    class="icon-box mx-auto"
                    style="
                      background: linear-gradient(
                        135deg,
                        #e3f2fd 0%,
                        #bbdefb 100%
                      );
                    "
                  >
                    <i
                      class="fas fa-laptop"
                      style="color: var(--primary-blue)"
                    ></i>
                  </div>
                  <h5 class="fw-bold mb-2">Online Portal</h5>
                  <p class="text-muted mb-3">
                    Submit detailed complaint through secure online form
                  </p>
                  <a
                    href="/complaint/submit"
                    class="btn shadow"
                    style="
                      background: linear-gradient(
                        135deg,
                        var(--primary-blue) 0%,
                        #1e4d7b 100%
                      );
                      border: none;
                      color: white;
                      border-radius: 10px;
                    "
                  >
                    Submit Complaint Form
                  </a>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div
                class="card border-0 shadow-sm h-100"
                style="border-radius: 15px"
              >
                <div class="card-body p-4 text-center">
                  <div
                    class="icon-box mx-auto"
                    style="
                      background: linear-gradient(
                        135deg,
                        #f8d7da 0%,
                        #f5c6cb 100%
                      );
                    "
                  >
                    <i class="fas fa-exclamation-triangle text-danger"></i>
                  </div>
                  <h5 class="fw-bold mb-2">SOS Button</h5>
                  <p class="text-muted mb-3">
                    Use emergency SOS button available on every page
                  </p>
                  <button
                    class="btn btn-danger shadow"
                    style="border-radius: 10px"
                    disabled
                  >
                    Available on All Pages
                  </button>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div
                class="card border-0 shadow-sm h-100"
                style="border-radius: 15px"
              >
                <div class="card-body p-4 text-center">
                  <div
                    class="icon-box mx-auto"
                    style="
                      background: linear-gradient(
                        135deg,
                        #fff3cd 0%,
                        #ffeaa7 100%
                      );
                    "
                  >
                    <i class="fas fa-inbox text-warning"></i>
                  </div>
                  <h5 class="fw-bold mb-2">Drop Box</h5>
                  <p class="text-muted mb-3">
                    Anonymous complaint drop box at Admin Building, Ground Floor
                  </p>
                  <span
                    class="badge bg-warning text-dark"
                    style="
                      padding: 0.5rem 1rem;
                      font-size: 0.9rem;
                      border-radius: 8px;
                    "
                  >
                    <i class="fas fa-map-marker-alt me-2"></i>Ground Floor
                  </span>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div
                class="card border-0 shadow-sm h-100"
                style="border-radius: 15px"
              >
                <div class="card-body p-4 text-center">
                  <div
                    class="icon-box mx-auto"
                    style="
                      background: linear-gradient(
                        135deg,
                        #d4edda 0%,
                        #c3e6cb 100%
                      );
                    "
                  >
                    <i class="fas fa-user-friends text-success"></i>
                  </div>
                  <h5 class="fw-bold mb-2">In Person</h5>
                  <p class="text-muted mb-3">
                    Visit Student Welfare Office during office hours
                  </p>
                  <span
                    class="badge bg-success"
                    style="
                      padding: 0.5rem 1rem;
                      font-size: 0.9rem;
                      border-radius: 8px;
                    "
                  >
                    <i class="fas fa-clock me-2"></i>Mon-Fri, 9AM-5PM
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Important Reminder -->
      <div class="row mb-5">
        <div class="col-lg-10 mx-auto">
          <div
            class="card border-0 shadow-sm"
            style="
              border-radius: 15px;
              background: linear-gradient(135deg, #fff3cd 0%, #ffe69c 100%);
            "
          >
            <div class="card-body p-4">
              <h5 class="fw-bold mb-3">
                <i class="fas fa-lightbulb text-warning me-2"></i>Important
                Reminders
              </h5>
              <div class="row g-3">
                <div class="col-md-6">
                  <div class="d-flex align-items-start">
                    <i
                      class="fas fa-user-shield text-warning me-3 mt-1"
                      style="font-size: 1.5rem"
                    ></i>
                    <p class="mb-0">
                      <strong>Confidentiality Guaranteed</strong> - Your
                      identity will be protected
                    </p>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="d-flex align-items-start">
                    <i
                      class="fas fa-clock text-warning me-3 mt-1"
                      style="font-size: 1.5rem"
                    ></i>
                    <p class="mb-0">
                      <strong>Quick Response</strong> - All complaints are
                      addressed within 24 hours
                    </p>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="d-flex align-items-start">
                    <i
                      class="fas fa-headset text-warning me-3 mt-1"
                      style="font-size: 1.5rem"
                    ></i>
                    <p class="mb-0">
                      <strong>24/7 Support</strong> - Help available round the
                      clock
                    </p>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="d-flex align-items-start">
                    <i
                      class="fas fa-shield-alt text-warning me-3 mt-1"
                      style="font-size: 1.5rem"
                    ></i>
                    <p class="mb-0">
                      <strong>Zero Tolerance</strong> - Strict action against
                      offenders
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="row">
        <div class="col-lg-10 mx-auto text-center">
          <div
            class="p-5 rounded"
            style="
              background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            "
          >
            <h4 class="fw-bold mb-3">Need Help Right Now?</h4>
            <p class="text-muted mb-4">
              Don't hesitate to reach out. We're here to help you 24/7.
            </p>
            <a
              href="/complaint/submit"
              class="btn btn-lg shadow me-2 mb-2"
              style="
                padding: 0.8rem 2rem;
                border-radius: 10px;
                background: linear-gradient(
                  135deg,
                  var(--primary-blue) 0%,
                  #1e4d7b 100%
                );
                border: none;
                color: white;
              "
            >
              <i class="fas fa-file-alt me-2"></i>Submit Online Complaint
            </a>
            <a
              href="/"
              class="btn btn-outline-secondary btn-lg shadow mb-2"
              style="padding: 0.8rem 2rem; border-radius: 10px"
            >
              <i class="fas fa-home me-2"></i>Go to Home
            </a>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
