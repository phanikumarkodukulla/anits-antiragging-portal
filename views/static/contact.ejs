<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="student-page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/">
          <i class="fas fa-shield-alt"></i> Anti-Ragging Portal
        </a>
        <div class="navbar-nav ms-auto">
          <a href="/" class="btn btn-outline-light btn-sm">
            <i class="fas fa-arrow-left me-2"></i>Back to Home
          </a>
        </div>
      </div>
    </nav>

    <div class="container my-5">
      <div class="row">
        <div class="col-lg-10 mx-auto">
          <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white py-4">
              <h2 class="mb-0">
                <i class="fas fa-phone-alt me-2"></i>Emergency Contact Numbers
              </h2>
            </div>
            <div class="card-body p-5">
              <div class="alert alert-danger mb-4">
                <h5 class="alert-heading">
                  <i class="fas fa-exclamation-triangle me-2"></i>In Case of
                  Emergency
                </h5>
                <p class="mb-0">
                  If you are in immediate danger or witnessing a ragging
                  incident, contact any of the numbers below immediately.
                </p>
              </div>

              <div class="row g-4">
                <!-- Campus Security -->
                <div class="col-md-6">
                  <div class="card bg-light border-0 h-100">
                    <div class="card-body text-center p-4">
                      <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                      <h5 class="fw-bold">Campus Security</h5>
                      <h3 class="text-primary mb-3">+91-1234-567890</h3>
                      <p class="small text-muted">24/7 Available</p>
                      <a href="tel:+911234567890" class="btn btn-primary">
                        <i class="fas fa-phone-alt me-2"></i>Call Now
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Anti-Ragging Helpline -->
                <div class="col-md-6">
                  <div class="card bg-light border-0 h-100">
                    <div class="card-body text-center p-4">
                      <i class="fas fa-headset fa-3x text-success mb-3"></i>
                      <h5 class="fw-bold">National Anti-Ragging Helpline</h5>
                      <h3 class="text-success mb-3">1800-180-5522</h3>
                      <p class="small text-muted">UGC 24x7 Toll Free</p>
                      <a href="tel:18001805522" class="btn btn-success">
                        <i class="fas fa-phone-alt me-2"></i>Call Now
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Dean Student Welfare -->
                <div class="col-md-6">
                  <div class="card bg-light border-0 h-100">
                    <div class="card-body text-center p-4">
                      <i class="fas fa-user-tie fa-3x text-info mb-3"></i>
                      <h5 class="fw-bold">Dean Student Welfare</h5>
                      <h3 class="text-info mb-3">+91-9876-543210</h3>
                      <p class="small text-muted">
                        Monday - Friday, 9 AM - 5 PM
                      </p>
                      <a href="tel:+919876543210" class="btn btn-info">
                        <i class="fas fa-phone-alt me-2"></i>Call Now
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Hostel Warden -->
                <div class="col-md-6">
                  <div class="card bg-light border-0 h-100">
                    <div class="card-body text-center p-4">
                      <i class="fas fa-building fa-3x text-warning mb-3"></i>
                      <h5 class="fw-bold">Chief Warden</h5>
                      <h3 class="text-warning mb-3">+91-8765-432109</h3>
                      <p class="small text-muted">24/7 Available</p>
                      <a href="tel:+918765432109" class="btn btn-warning">
                        <i class="fas fa-phone-alt me-2"></i>Call Now
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Police -->
                <div class="col-md-6">
                  <div class="card bg-light border-0 h-100">
                    <div class="card-body text-center p-4">
                      <i class="fas fa-car-side fa-3x text-danger mb-3"></i>
                      <h5 class="fw-bold">Local Police Station</h5>
                      <h3 class="text-danger mb-3">100 / 112</h3>
                      <p class="small text-muted">Emergency Services</p>
                      <a href="tel:100" class="btn btn-danger">
                        <i class="fas fa-phone-alt me-2"></i>Call Now
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Women's Helpline -->
                <div class="col-md-6">
                  <div class="card bg-light border-0 h-100">
                    <div class="card-body text-center p-4">
                      <i class="fas fa-female fa-3x text-danger mb-3"></i>
                      <h5 class="fw-bold">Women's Helpline</h5>
                      <h3 class="text-danger mb-3">1091</h3>
                      <p class="small text-muted">24/7 Available</p>
                      <a href="tel:1091" class="btn btn-danger">
                        <i class="fas fa-phone-alt me-2"></i>Call Now
                      </a>
                    </div>
                  </div>
                </div>
              </div>

              <hr class="my-5" />

              <!-- Email Contacts -->
              <h4 class="fw-bold mb-4">
                <i class="fas fa-envelope me-2"></i>Email Contacts
              </h4>
              <div class="row g-3">
                <div class="col-md-6">
                  <div class="card border-primary">
                    <div class="card-body">
                      <h6 class="fw-bold">Anti-Ragging Committee</h6>
                      <p class="mb-2">
                        <i class="fas fa-envelope text-primary me-2"></i>
                        <a href="mailto:antiragging@college.edu"
                          >antiragging@college.edu</a
                        >
                      </p>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="card border-primary">
                    <div class="card-body">
                      <h6 class="fw-bold">Dean Student Welfare</h6>
                      <p class="mb-2">
                        <i class="fas fa-envelope text-primary me-2"></i>
                        <a href="mailto:dean@college.edu">dean@college.edu</a>
                      </p>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="card border-primary">
                    <div class="card-body">
                      <h6 class="fw-bold">Chief Warden</h6>
                      <p class="mb-2">
                        <i class="fas fa-envelope text-primary me-2"></i>
                        <a href="mailto:warden@college.edu"
                          >warden@college.edu</a
                        >
                      </p>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="card border-primary">
                    <div class="card-body">
                      <h6 class="fw-bold">Counselling Center</h6>
                      <p class="mb-2">
                        <i class="fas fa-envelope text-primary me-2"></i>
                        <a href="mailto:counselling@college.edu"
                          >counselling@college.edu</a
                        >
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              <div class="alert alert-info mt-4">
                <h6 class="fw-bold">
                  <i class="fas fa-info-circle me-2"></i>Alternative Reporting
                  Methods:
                </h6>
                <ul class="mb-0">
                  <li>
                    <strong>Online Portal:</strong>
                    <a href="/complaint/submit">Submit Complaint Form</a>
                  </li>
                  <li>
                    <strong>SOS Button:</strong> Use the emergency SOS button on
                    any page
                  </li>
                  <li>
                    <strong>Drop Box:</strong> Located at Admin Building, Ground
                    Floor
                  </li>
                  <li>
                    <strong>In Person:</strong> Visit Student Welfare Office
                    during office hours
                  </li>
                </ul>
              </div>

              <div class="text-center mt-4">
                <a href="/complaint/submit" class="btn btn-primary btn-lg me-2">
                  <i class="fas fa-file-alt me-2"></i>Submit Online Complaint
                </a>
                <a href="/" class="btn btn-outline-primary btn-lg">
                  <i class="fas fa-home me-2"></i>Go to Home
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="bg-dark text-white py-3 mt-5">
      <div class="container text-center">
        <p class="mb-0">&copy; 2024 Anti-Ragging Portal</p>
      </div>
    </footer>

    <!-- SOS Button -->
    <button id="sosButton" class="sos-button" title="Emergency SOS Alert">
      <i class="fas fa-exclamation-triangle"></i> SOS
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sos.js"></script>
  </body>
</html>
