<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="admin-page">
  
  <%- include('../partials/admin-navbar', { currentPage: 'complaints' }) %>

  <div class="container-fluid px-4 py-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3">
          <h1 class="h2">Complaint Details</h1>
          <a href="/admin/complaints" class="btn" style="background: #ffc107; color: #000; border: none; font-weight: 600;">
            <i class="fas fa-arrow-left me-2"></i>Back to List
          </a>
        </div>

        <!-- Complaint Information -->
        <div class="row">
          <div class="col-lg-8">
            <div class="card mb-4">
              <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Complaint Information</h5>
              </div>
              <div class="card-body">
                <div class="row mb-3">
                  <div class="col-md-6">
                    <strong>Complaint ID:</strong>
                    <p><code class="fs-5"><%= complaint.complaintId %></code></p>
                  </div>
                  <div class="col-md-6">
                    <strong>Status:</strong>
                    <p>
                      <% if (complaint.status === 'Pending') { %>
                        <span class="badge bg-warning text-dark fs-6">Pending</span>
                      <% } else if (complaint.status === 'In Review') { %>
                        <span class="badge bg-info fs-6">In Review</span>
                      <% } else { %>
                        <span class="badge bg-success fs-6">Resolved</span>
                      <% } %>
                    </p>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col-md-6">
                    <strong>Severity:</strong>
                    <p>
                      <% if (complaint.severity === 'High') { %>
                        <span class="badge bg-danger fs-6">High</span>
                      <% } else if (complaint.severity === 'Medium') { %>
                        <span class="badge bg-warning text-dark fs-6">Medium</span>
                      <% } else { %>
                        <span class="badge bg-info fs-6">Low</span>
                      <% } %>
                    </p>
                  </div>
                  <div class="col-md-6">
                    <strong>Location:</strong>
                    <p><%= complaint.location %></p>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col-md-6">
                    <strong>Student Name:</strong>
                    <p><%= complaint.isAnonymous ? 'Anonymous' : complaint.studentName %></p>
                  </div>
                  <div class="col-md-6">
                    <strong>Email:</strong>
                    <p><%= complaint.email %></p>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col-md-6">
                    <strong>Phone:</strong>
                    <p><%= complaint.phone %></p>
                  </div>
                  <div class="col-md-6">
                    <strong>Submitted:</strong>
                    <p><%= new Date(complaint.createdAt).toLocaleString() %></p>
                  </div>
                </div>

                <hr>

                <div class="mb-3">
                  <strong>Title:</strong>
                  <p class="fs-5"><%= complaint.title %></p>
                </div>

                <div class="mb-3">
                  <strong>Description:</strong>
                  <p class="text-justify"><%= complaint.description %></p>
                </div>

                <% if (complaint.evidenceFiles && complaint.evidenceFiles.length > 0) { %>
                  <hr>
                  <div class="mb-3">
                    <strong>Evidence Files (<%= complaint.evidenceFiles.length %>):</strong>
                    <div class="row g-2 mt-2">
                      <% complaint.evidenceFiles.forEach(file => { %>
                        <div class="col-md-3">
                          <div class="card">
                            <div class="card-body text-center p-2">
                              <% if (file.mimetype.startsWith('image/')) { %>
                                <a href="/<%= file.path %>" target="_blank">
                                  <img src="/<%= file.path %>" class="img-fluid" alt="Evidence">
                                </a>
                              <% } else { %>
                                <a href="/<%= file.path %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                  <i class="fas fa-download me-1"></i><%= file.originalName %>
                                </a>
                              <% } %>
                            </div>
                          </div>
                        </div>
                      <% }) %>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Update Form -->
          <div class="col-lg-4">
            <div class="card mb-4">
              <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Update Complaint</h5>
              </div>
              <div class="card-body">
                <form action="/admin/complaints/<%= complaint.complaintId %>/update" method="POST">
                  <div class="mb-3">
                    <label class="form-label fw-bold">Status</label>
                    <select class="form-select" name="status" required>
                      <option value="Pending" <%= complaint.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                      <option value="In Review" <%= complaint.status === 'In Review' ? 'selected' : '' %>>In Review</option>
                      <option value="Resolved" <%= complaint.status === 'Resolved' ? 'selected' : '' %>>Resolved</option>
                    </select>
                  </div>

                  <div class="mb-3">
                    <label class="form-label fw-bold">Admin Notes (Internal)</label>
                    <textarea class="form-control" name="adminNotes" rows="3" placeholder="Internal notes, not visible to student"><%= complaint.adminNotes || '' %></textarea>
                  </div>

                  <div class="mb-3">
                    <label class="form-label fw-bold">Action Taken Report</label>
                    <textarea class="form-control" name="actionTakenReport" rows="4" placeholder="Describe action taken"><%= complaint.actionTakenReport || '' %></textarea>
                  </div>

                  <div class="mb-3">
                    <label class="form-label fw-bold">Public Remarks</label>
                    <textarea class="form-control" name="publicRemarks" rows="3" placeholder="Visible to student when tracking"><%= complaint.publicRemarks || '' %></textarea>
                  </div>

                  <button type="submit" class="btn btn-success w-100">
                    <i class="fas fa-save me-2"></i>Update Complaint
                  </button>
                </form>
              </div>
            </div>

            <% if (complaint.handledBy) { %>
              <div class="card mb-4">
                <div class="card-body">
                  <strong>Handled By:</strong>
                  <p class="mb-0"><%= complaint.handledBy.fullName %></p>
                  <small class="text-muted"><%= complaint.handledBy.email %></small>
                </div>
              </div>
            <% } %>
          </div>
        </div>

      </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
