<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/admin/dashboard">
          <i class="fas fa-shield-alt"></i> Admin Dashboard
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <span class="navbar-text text-light me-3">
                <i class="fas fa-user me-2"></i><%= session.adminName %>
              </span>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/profile">
                <i class="fas fa-user-cog"></i> Profile
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/logout">
                <i class="fas fa-sign-out-alt"></i> Logout
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
          <div class="position-sticky pt-3">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link active" href="/admin/dashboard">
                  <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/complaints">
                  <i class="fas fa-file-alt me-2"></i>All Complaints
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/analytics">
                  <i class="fas fa-chart-bar me-2"></i>Analytics
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/sos-alerts">
                  <i class="fas fa-exclamation-triangle me-2"></i>SOS Alerts
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/activity-logs">
                  <i class="fas fa-history me-2"></i>Activity Logs
                </a>
              </li>
              <hr />
              <li class="nav-item">
                <a class="nav-link" href="/admin/export/csv">
                  <i class="fas fa-file-csv me-2"></i>Export CSV
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/export/excel">
                  <i class="fas fa-file-excel me-2"></i>Export Excel
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/export/pdf">
                  <i class="fas fa-file-pdf me-2"></i>Export PDF
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
          >
            <h1 class="h2">Dashboard Overview</h1>
          </div>

          <!-- Stats Cards -->
          <div class="row g-3 mb-4">
            <div class="col-md-3">
              <div class="card bg-primary text-white">
                <div class="card-body">
                  <h6 class="card-title">Total Complaints</h6>
                  <h2 class="mb-0"><%= stats.total %></h2>
                  <small><i class="fas fa-file-alt"></i> All Time</small>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-warning text-white">
                <div class="card-body">
                  <h6 class="card-title">Pending</h6>
                  <h2 class="mb-0"><%= stats.pending %></h2>
                  <small><i class="fas fa-clock"></i> Awaiting Review</small>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-info text-white">
                <div class="card-body">
                  <h6 class="card-title">In Review</h6>
                  <h2 class="mb-0"><%= stats.inReview %></h2>
                  <small><i class="fas fa-eye"></i> Being Processed</small>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-success text-white">
                <div class="card-body">
                  <h6 class="card-title">Resolved</h6>
                  <h2 class="mb-0"><%= stats.resolved %></h2>
                  <small><i class="fas fa-check-circle"></i> Completed</small>
                </div>
              </div>
            </div>
          </div>

          <!-- SOS Alerts (if any) -->
          <% if (recentSOSAlerts && recentSOSAlerts.length > 0) { %>
          <div class="alert alert-danger mb-4">
            <h5 class="alert-heading">
              <i class="fas fa-exclamation-triangle me-2"></i>Active SOS Alerts
              (<%= recentSOSAlerts.length %>)
            </h5>
            <p>
              There are <%= recentSOSAlerts.length %> new SOS alerts requiring
              immediate attention.
            </p>
            <a href="/admin/sos-alerts" class="btn btn-danger btn-sm"
              >View All Alerts</a
            >
          </div>
          <% } %>

          <!-- Recent Complaints -->
          <div class="card shadow-sm">
            <div class="card-header bg-white">
              <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Recent Complaints
              </h5>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Complaint ID</th>
                      <th>Title</th>
                      <th>Severity</th>
                      <th>Status</th>
                      <th>Date</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (recentComplaints.length === 0) { %>
                    <tr>
                      <td colspan="6" class="text-center text-muted">
                        No complaints found
                      </td>
                    </tr>
                    <% } else { %> <% recentComplaints.forEach(complaint => { %>
                    <tr>
                      <td><code><%= complaint.complaintId %></code></td>
                      <td><%= complaint.title.substring(0, 40) %>...</td>
                      <td>
                        <% if (complaint.severity === 'High') { %>
                        <span class="badge bg-danger">High</span>
                        <% } else if (complaint.severity === 'Medium') { %>
                        <span class="badge bg-warning">Medium</span>
                        <% } else { %>
                        <span class="badge bg-info">Low</span>
                        <% } %>
                      </td>
                      <td>
                        <% if (complaint.status === 'Pending') { %>
                        <span class="badge bg-warning">Pending</span>
                        <% } else if (complaint.status === 'In Review') { %>
                        <span class="badge bg-info">In Review</span>
                        <% } else { %>
                        <span class="badge bg-success">Resolved</span>
                        <% } %>
                      </td>
                      <td>
                        <%= new Date(complaint.createdAt).toLocaleDateString()
                        %>
                      </td>
                      <td>
                        <a
                          href="/admin/complaints/<%= complaint.complaintId %>"
                          class="btn btn-sm btn-primary"
                        >
                          <i class="fas fa-eye"></i> View
                        </a>
                      </td>
                    </tr>
                    <% }) %> <% } %>
                  </tbody>
                </table>
              </div>
              <div class="text-center mt-3">
                <a href="/admin/complaints" class="btn btn-outline-primary"
                  >View All Complaints</a
                >
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
