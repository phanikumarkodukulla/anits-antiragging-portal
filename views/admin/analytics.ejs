<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  </head>
  <body class="admin-page">
    <%- include('../partials/admin-navbar', { currentPage: 'analytics' }) %>

    <div class="container-fluid px-4 py-4">
      <!-- Page Header -->
      <div class="mb-4">
        <h2 class="mb-1 fw-bold">
          <i
            class="fas fa-chart-bar me-2"
            style="color: var(--primary-blue)"
          ></i>
          Analytics Dashboard
        </h2>
        <p class="text-muted mb-0">
          Comprehensive statistics and trends analysis
        </p>
      </div>

      <!-- Charts Row 1 -->
      <div class="row g-4 mb-4">
        <div class="col-md-6">
          <div class="admin-card h-100">
            <div class="d-flex align-items-center mb-3">
              <div
                class="me-3"
                style="
                  width: 4px;
                  height: 24px;
                  background: linear-gradient(
                    135deg,
                    var(--primary-blue),
                    var(--primary-dark)
                  );
                  border-radius: 2px;
                "
              ></div>
              <h5 class="mb-0 fw-bold">Complaints by Status</h5>
            </div>
            <div style="position: relative; height: 300px">
              <canvas id="statusChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="admin-card h-100">
            <div class="d-flex align-items-center mb-3">
              <div
                class="me-3"
                style="
                  width: 4px;
                  height: 24px;
                  background: linear-gradient(
                    135deg,
                    var(--primary-blue),
                    var(--primary-dark)
                  );
                  border-radius: 2px;
                "
              ></div>
              <h5 class="mb-0 fw-bold">Complaints by Severity</h5>
            </div>
            <div style="position: relative; height: 300px">
              <canvas id="severityChart"></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- Charts Row 2 -->
      <div class="row g-4 mb-4">
        <div class="col-md-12">
          <div class="admin-card">
            <div class="d-flex align-items-center mb-3">
              <div
                class="me-3"
                style="
                  width: 4px;
                  height: 24px;
                  background: linear-gradient(
                    135deg,
                    var(--primary-blue),
                    var(--primary-dark)
                  );
                  border-radius: 2px;
                "
              ></div>
              <h5 class="mb-0 fw-bold">Monthly Trend (Last 6 Months)</h5>
            </div>
            <canvas id="monthlyChart" height="80"></canvas>
          </div>
        </div>
      </div>

      <!-- Top Locations -->
      <div class="row g-4">
        <div class="col-md-12">
          <div class="admin-card">
            <div class="d-flex align-items-center mb-3">
              <div
                class="me-3"
                style="
                  width: 4px;
                  height: 24px;
                  background: linear-gradient(
                    135deg,
                    var(--primary-blue),
                    var(--primary-dark)
                  );
                  border-radius: 2px;
                "
              ></div>
              <h5 class="mb-0 fw-bold">Top 10 Complaint Locations</h5>
            </div>
            <canvas id="locationChart" height="80"></canvas>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Status Chart
      const statusData = <%- JSON.stringify(statusData) %>;
      const statusCtx = document.getElementById('statusChart').getContext('2d');
      new Chart(statusCtx, {
        type: 'doughnut',
        data: {
          labels: statusData.map(d => d._id),
          datasets: [{
            data: statusData.map(d => d.count),
            backgroundColor: ['#ffc107', '#0dcaf0', '#198754']
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true
        }
      });

      // Severity Chart
      const severityData = <%- JSON.stringify(severityData) %>;
      const severityCtx = document.getElementById('severityChart').getContext('2d');
      new Chart(severityCtx, {
        type: 'pie',
        data: {
          labels: severityData.map(d => d._id),
          datasets: [{
            data: severityData.map(d => d.count),
            backgroundColor: ['#0dcaf0', '#ffc107', '#dc3545']
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true
        }
      });

      // Monthly Chart
      const monthlyData = <%- JSON.stringify(monthlyData) %>;
      const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
      const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
      new Chart(monthlyCtx, {
        type: 'line',
        data: {
          labels: monthlyData.map(d => `${monthNames[d._id.month - 1]} ${d._id.year}`),
          datasets: [{
            label: 'Complaints',
            data: monthlyData.map(d => d.count),
            borderColor: '#2A599B',
            backgroundColor: 'rgba(42, 89, 155, 0.1)',
            tension: 0.4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                stepSize: 1
              }
            }
          }
        }
      });

      // Location Chart
      const locationData = <%- JSON.stringify(locationData) %>;
      const locationCtx = document.getElementById('locationChart').getContext('2d');
      new Chart(locationCtx, {
        type: 'bar',
        data: {
          labels: locationData.map(d => d._id),
          datasets: [{
            label: 'Complaints',
            data: locationData.map(d => d.count),
            backgroundColor: '#2A599B'
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          indexAxis: 'y',
          scales: {
            x: {
              beginAtZero: true,
              ticks: {
                stepSize: 1
              }
            }
          }
        }
      });
    </script>
  </body>
</html>
