<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="admin-page">
    <%- include('../partials/admin-navbar', { currentPage: 'logs' }) %>

    <div class="container-fluid px-4 py-4">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
      >
        <h1 class="h2">Activity Logs</h1>
      </div>

      <!-- Activity Logs Table -->
      <div class="card shadow-sm">
        <div
          class="card-header bg-white d-flex justify-content-between align-items-center"
        >
          <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>Admin Activity History (<%=
            logs.length %>)
          </h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Admin</th>
                  <th>Action</th>
                  <th>Target</th>
                  <th>Details</th>
                  <th>IP Address</th>
                  <th>Timestamp</th>
                </tr>
              </thead>
              <tbody>
                <% if (logs.length === 0) { %>
                <tr>
                  <td colspan="6" class="text-center text-muted py-4">
                    <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                    No activity logs found
                  </td>
                </tr>
                <% } else { %> <% logs.forEach(log => { %>
                <tr>
                  <td>
                    <%= log.admin.fullName %><br />
                    <small class="text-muted"><%= log.admin.username %></small>
                  </td>
                  <td>
                    <% if (log.action === 'Login') { %>
                    <span class="badge bg-success"
                      ><i class="fas fa-sign-in-alt me-1"></i>Login</span
                    >
                    <% } else if (log.action === 'Logout') { %>
                    <span class="badge bg-secondary"
                      ><i class="fas fa-sign-out-alt me-1"></i>Logout</span
                    >
                    <% } else if (log.action === 'Updated Complaint') { %>
                    <span class="badge bg-primary"
                      ><i class="fas fa-edit me-1"></i>Update Complaint</span
                    >
                    <% } else if (log.action === 'Deleted Complaint') { %>
                    <span class="badge bg-danger"
                      ><i class="fas fa-trash me-1"></i>Delete Complaint</span
                    >
                    <% } else if (log.action === 'Viewed Complaint') { %>
                    <span class="badge bg-info"
                      ><i class="fas fa-eye me-1"></i>View Complaint</span
                    >
                    <% } else if (log.action === 'Exported Data') { %>
                    <span class="badge bg-info"
                      ><i class="fas fa-download me-1"></i>Export Data</span
                    >
                    <% } else if (log.action === 'Changed Password') { %>
                    <span class="badge bg-warning text-dark"
                      ><i class="fas fa-key me-1"></i>Change Password</span
                    >
                    <% } else if (log.action === 'Updated SOS Alert') { %>
                    <span class="badge bg-danger"
                      ><i class="fas fa-exclamation-triangle me-1"></i>SOS
                      Alert</span
                    >
                    <% } else { %>
                    <span class="badge bg-light text-dark"
                      ><%= log.action %></span
                    >
                    <% } %>
                  </td>
                  <td>
                    <% if (log.complaintId) { %>
                    <strong>Complaint</strong>
                    <br /><code><%= log.complaintId %></code>
                    <% } else { %>
                    <span class="text-muted">-</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (log.details) { %>
                    <small><%= log.details %></small>
                    <% } else { %>
                    <span class="text-muted">-</span>
                    <% } %>
                  </td>
                  <td><span class="text-muted">-</span></td>
                  <td><%= new Date(log.timestamp).toLocaleString() %></td>
                </tr>
                <% }) %> <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
